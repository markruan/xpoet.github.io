<% if (is_post()) { %>
    <div class="article-container">
        <div class="article-title">
            <h3><a class="article-title-hover-animation"><%= page.title %></a></h3>
        </div>

        <div class="meta-info">
            <%- partial('common/article-meta-info', {articleObject: page, index: true}) %>
        </div>

        <div class="article-content markdown">
            <%- page.content %>
        </div>

        <div class="article-nav">
            <% if (page.prev) { %>
                <div class="article-prev">
                    <a class="prev btn" rel="prev"
                       href="<%= url_for(page.prev.path) %>"><i class="fa fa-chevron-left"></i> <%= page.prev.title %>
                    </a>
                </div>
            <% } %>
            <% if (page.next) { %>
                <div class="article-next">
                    <a class="next btn" rel="next"
                       href="<%= url_for(page.next.path) %>"><%= page.next.title %> <i class="fa fa-chevron-right"></i>
                    </a>
                </div>
            <% } %>
        </div>

        <div class="comment-container">
            <%- partial('common/valine') %>
        </div>
    </div>

<% } %>