@require '../variables.styl'

.left-side-container {
  width 100%
  height 100%
  position relative
  box-sizing border-box
  border-right 1px solid $border-color


  .site-info-container {
    position absolute
    width 100%
    top 30%
    transform: translateY(-50%);
  }

  .footer-container {
    position absolute
    width 100%
    bottom 0
  }
}