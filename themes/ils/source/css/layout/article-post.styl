@require 'variables.styl'

.article-container {

  .article-title {

    h3 {
      text-transform: uppercase;
      font-weight: 600;
      color: $article-title-color;
      font-size: 22px;
      margin: 0;
    }

    a {
      color: $article-title-color;
    }

  }

  .meta-info {
    margin: 10px 0 20px 0;
  }

  .article-content {

    padding-bottom: 10px;
    border-bottom: 1px solid #f2f2f2;

    a {
      text-decoration: none;
      letter-spacing: 1px;
      color: #4786D6;
    }

    a:hover {
      color: #2F69B3;
    }

    h3 {
      color: #5F5F5F;
      font-size: 22px;
      font-weight: 600;
    }

    h4 {
      color: #5F5F5F;
      font-size: 16px;
    }
  }


  .article-nav {

    height 40px
    margin 30px 0

    .article-prev {
      float left
    }

    .article-next {
      float right
    }

  }

}
