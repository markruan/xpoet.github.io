@require 'common/variables.styl'

.article-content-container {

  .article-title {

    h3 {
      font-weight: 600;
      font-size: 1.8em;
      margin: 0;
    }

    a {
      color: var(--second-text-color);
    }

  }

  .meta-info {
    margin: 10px 0 30px 0;
  }

  .article-content {
    padding-bottom: 30px;
    border-bottom: 1px solid $border-color;
  }


  .article-nav {
    height 40px
    margin 40px 0

    .article-prev {
      float left
    }

    .article-next {
      float right
    }

  }

}
